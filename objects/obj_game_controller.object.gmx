        for(j = 0; j&lt;gridHeight; j++){
            if(grid[i,j] = player_light){
                draw_set_color(c_yellow);
            }
            else{
                draw_set_color(c_blue);
            }
            draw_rectangle((i*gridSize),(j*gridSize),(i*gridSize)+gridSize,(j*gridSize)+gridSize,false);
